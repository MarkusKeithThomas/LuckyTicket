<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#1565C0"
                android:endColor="#0D47A1"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#0D47A1" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#42A5F5"
                android:endColor="#1E88E5"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#1E88E5" />
        </shape>
    </item>
</selector>
